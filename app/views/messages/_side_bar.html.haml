.side_bar 
  
  .side_bar__user_name
    .top_items
      .top_items__name
        = current_user.name
      .top_items__icons
        %a1
          =link_to new_group_path, class: "editlink" do
            = icon('far', 'edit')
        %a2
          = link_to edit_user_path(current_user), class: "editmember" do
            = icon('fa', 'cog')

  .side_bar__group_list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group_id: group.id), class: "editlink" do
          .group__name
            =group.name
          .group__message
            =group.show_last_message